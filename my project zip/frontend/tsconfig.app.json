{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "ESNext",
    
    /* Alias Settings: THIS IS THE KEY */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] 
    },
    
    "jsx": "react-jsx",
    "types": ["@types/node"] 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}