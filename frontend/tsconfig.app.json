{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "ESNext",

    /* Aliasing Settings (Duplicated for compatibility) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] 
    },
    
    "jsx": "react-jsx",
    "types": ["@types/node"] // Ensure this is present after installing @types/node
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}